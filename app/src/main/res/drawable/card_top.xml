<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"></corners>
            <solid android:color="@color/unity_action_border"></solid>
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="4dp" android:topLeftRadius="4dp"></corners>
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
</layer-list>